<UserControl x:Class="PokerTracker3000.WpfComponents.SideMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:PokerTracker3000.WpfComponents">

    <StackPanel Orientation="Vertical"
                DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=.}"
                Margin="20,0,0,0">
        <ItemsControl ItemsSource="{Binding Path=ViewModel.SideMenuOptions}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <components:SideMenuOption OptionModel="{Binding Path=.}"
                                               MenuViewModel="{Binding RelativeSource={RelativeSource
                                                                       Mode=FindAncestor,
                                                                       AncestorType={x:Type UserControl}},
                                                                       Path=ViewModel}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
